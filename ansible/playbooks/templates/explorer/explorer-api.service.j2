[Unit]
Description=Explorer API
Requires=network.target
After=syslog.target network.target

[Service]
WorkingDirectory=/home/{{ config.user }}/explorer
ExecStart=/usr/bin/node /home/{{ config.user }}/explorer/packages/api/dist/cluster.js
Type=simple
Restart=always
TimeoutStartSec=60
RestartSec=60
User={{ config.user }}
Group={{ config.user }}

[Install]
WantedBy=multi-user.target
