server=1
listen=1
daemon=1
port={{ wallet_port | default(36988) }}

rcpbind=127.0.0.1
rpcbind={{ ansible_default_ipv4.address }}

{% if txindex is defined and txindex %}
txindex=1
{% endif %}

maxconnections={{ maxconnections| default(100) }}

rpcuser={{ wallet_username }}
rpcpassword={{ wallet_password }}
{% for ip in rpcallowips %}
rpcallowip={{ ip }}
{% endfor %}

{% for node in node_list %}
addnode={{ node }}
{% endfor %}
